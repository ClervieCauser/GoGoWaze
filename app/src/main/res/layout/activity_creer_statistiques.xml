<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/view_creerStatistiques"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="276dp"
            android:layout_height="70dp"
            android:layout_marginStart="64dp"
            android:gravity="center"
            android:text="Créer de statistiques"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:backgroundTint="@color/white"
            android:text="X"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ecrivez une ville" />

    <EditText
        android:id="@+id/editTextAccidentsEleves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Combien d'accidents élevés ?" />

    <EditText
        android:id="@+id/editTextAccidentsFaibles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Combien d'accidents faibles ?" />

    <EditText
        android:id="@+id/editTextAccidentsModere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Combien d'accidents modérés ?" />

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Créer" />

    <ListView
        android:id="@+id/listViewStatistics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
